<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="de.fluchtwege.vocabulary.questions.QuestionViewModel"/>
    </data>

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/appointment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground">

        <!-- Bottom View Start-->
        <RelativeLayout
            android:id="@+id/cancel_appointment_container"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_question"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/margin_large"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/delete_question"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center"

                    android:padding="@dimen/margin_large"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="bold"/>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_large">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@{viewModel.information}"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                tools:text="sd"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@{viewModel.answer}"
                android:textSize="@dimen/text_normal"
                tools:text="Buch"/>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
</layout>