<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.fluchtwege.vocabulary">

    <application
        android:name="de.fluchtwege.vocabulary.Vocabulary"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="de.fluchtwege.vocabulary.lessons.LessonsActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.MAIN"/>

            </intent-filter>
        </activity>

        <activity android:name="de.fluchtwege.vocabulary.questions.QuestionsActivity"/>
        <activity android:name="de.fluchtwege.vocabulary.addlesson.AddLessonActivity"/>
        <activity android:name="de.fluchtwege.vocabulary.addquestion.AddQuestionActivity"/>
        <activity android:name="de.fluchtwege.vocabulary.quiz.QuizActivity"/>

    </application>
</manifest>
